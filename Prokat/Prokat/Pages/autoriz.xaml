<Page x:Class="Prokat.Pages.autoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Prokat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="autoriz">

    <Grid Background="White">
        <StackPanel 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Height="190"
            Width="190">
            <Label Content="Логин" FontSize="20" FontFamily="Comic Sans MS" ></Label>
            <TextBox></TextBox>
            <Label Content="Пароль" FontSize="20" FontFamily="Comic Sans MS"></Label>
            <PasswordBox x:Name="PassBox"></PasswordBox>
            <Button FontSize="15" FontFamily="Comic Sans MS" Content="Вход" Background="#FF498C51" Margin="0,20,0,0" x:Name="ButtonEnter" Click="ButtonEnter_Click" BorderBrush="#FF37643D" />
        </StackPanel>
    </Grid>
</Page>
