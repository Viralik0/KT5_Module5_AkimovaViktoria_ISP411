<Window x:Class="Prokat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prokat"
        mc:Ignorable="d"
        Title="ИС по прокату спортивного инвентаря" Height="450" Width="800"
        MinHeight="450" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="#FF76E383">
            <Label Content="ИС по прокату спортивного инвентаря" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontFamily="Comic Sans MS"
                   FontSize="28">
            </Label>
            <Image Source="/Source/logo.png"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="10"/>
        </Grid>
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"> </Frame>
    </Grid>
</Window>
